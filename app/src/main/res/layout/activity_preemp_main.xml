<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA"
    android:id="@+id/preemp_scrollview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Stepper Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#002F62"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:elevation="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pre_emp_form_title"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pre_emp_form_prompt"
                android:textColor="#E3F2FD"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"/>
                    <!-- Steps -->
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- Step 1 - Active -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp">

                            <TextView
                                android:id="@+id/step1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="@string/pre_emp_step_1"
                                android:textColor="@color/Deepwater"
                                android:background="@drawable/circle_white"
                                android:gravity="center"
                                android:fontFamily="sans-serif-black"
                                android:textSize="18sp"
                                android:elevation="2dp"/>

                            <TextView
                                android:id="@+id/step1title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:breakStrategy="simple"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:maxLines="3"
                                android:text="@string/pre_emp_step_1_title"
                                android:textColor="@color/White"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Step 2 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp">

                            <TextView
                                android:id="@+id/step2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="@string/pre_emp_step_2"
                                android:textColor="@color/White"
                                android:background="@drawable/circle_outline"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="16sp"
                                android:elevation="2dp"/>

                            <TextView
                                android:id="@+id/step2title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pre_emp_step_2_title"
                                android:textColor="@color/PaleBlue"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:breakStrategy="simple"/>
                        </LinearLayout>

                        <!-- Step 3 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp">

                            <TextView
                                android:id="@+id/step3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="@string/pre_emp_step_3"
                                android:textColor="@color/White"
                                android:background="@drawable/circle_outline"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="16sp"
                                android:elevation="2dp"/>

                            <TextView
                                android:id="@+id/step3title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pre_emp_step_3_title"
                                android:textColor="@color/PaleBlue"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:maxLines="2"
                                android:breakStrategy="simple"/>
                        </LinearLayout>

                        <!-- Step 4 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp">

                            <TextView
                                android:id="@+id/step4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="@string/pre_emp_step_4"
                                android:textColor="@color/White"
                                android:background="@drawable/circle_outline"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="16sp"
                                android:elevation="2dp"/>

                            <TextView
                                android:id="@+id/step4title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pre_emp_step_4_title"
                                android:textColor="@color/PaleBlue"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:breakStrategy="simple"/>
                        </LinearLayout>

                        <!-- Step 5 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp">

                            <TextView
                                android:id="@+id/step5"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="@string/pre_emp_step_5"
                                android:textColor="@color/White"
                                android:background="@drawable/circle_outline"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="16sp"
                                android:elevation="2dp"/>
                            <TextView
                                android:id="@+id/step5title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pre_emp_step_5_title"
                                android:textColor="@color/PaleBlue"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:maxLines="2"
                                android:ellipsize="none"
                                android:scrollHorizontally="false"
                                android:breakStrategy="simple"
                                android:lineSpacingExtra="2dp"/>

                        </LinearLayout>

                        <!-- Step 6-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp">

                            <TextView
                                android:id="@+id/step6"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="@string/pre_emp_step_6"
                                android:textColor="@color/White"
                                android:background="@drawable/circle_outline"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="16sp"
                                android:elevation="2dp"/>

                            <TextView
                                android:id="@+id/step6title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pre_emp_step_6_title"
                                android:textColor="@color/PaleBlue"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:maxLines="2"
                                android:breakStrategy="simple"/>
                        </LinearLayout>
                    </LinearLayout>
        </LinearLayout>

        <!-- Fragment Container for Each Step -->
        <FrameLayout
            android:id="@+id/step_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
