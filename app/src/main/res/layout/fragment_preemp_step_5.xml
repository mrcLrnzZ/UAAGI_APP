<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Government Issued Numbers Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Government Issued Numbers"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>

                    <Button
                        android:id="@+id/btnAddGovernmentId"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add"
                        android:backgroundTint="#004B87"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="6dp"
                        android:elevation="0dp"/>
                </LinearLayout>

                <!-- Government ID Container -->
                <LinearLayout
                    android:id="@+id/governmentIdContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Government ID Entry -->
                    <LinearLayout
                        android:id="@+id/governmentIdEntry1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@drawable/education_entry_background"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Government Issued Number"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="16dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/idTypeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Type"
                            app:hintTextColor="#757575"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

                            <AutoCompleteTextView
                                android:id="@+id/idTypeInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A1A1A"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:hint="Select ID Type"
                                android:inputType="none"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/idNumberLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Number"
                            app:hintTextColor="#757575"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            app:placeholderText="Enter ID number"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/idNumberInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A1A1A"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:inputType="text"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Emergency Contact Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Emergency Contact"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>
                </LinearLayout>

                <!-- Emergency Contact Form -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emergencyContactNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Contact Name *"
                    app:hintTextColor="#757575"
                    app:boxStrokeColor="#004B87"
                    app:boxStrokeWidth="2dp"
                    app:placeholderText="Enter emergency contact name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emergencyContactNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#1A1A1A"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:inputType="textCapWords"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emergencyRelationshipLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Relationship *"
                    app:hintTextColor="#757575"
                    app:boxStrokeColor="#004B87"
                    app:boxStrokeWidth="2dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/emergencyRelationshipInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#1A1A1A"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:hint="Select Relationship"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emergencyContactNumberLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Number *"
                    app:hintTextColor="#757575"
                    app:boxStrokeColor="#004B87"
                    app:boxStrokeWidth="2dp"
                    app:placeholderText="+63 XXX XXX XXXX"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emergencyContactNumberInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#1A1A1A"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:inputType="phone"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Microsoft Office Skills Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Microsoft Office Skills"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>
                </LinearLayout>

                <!-- Skills Table -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/education_entry_background"
                    android:padding="16dp">

                    <!-- Table Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#002F62"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginBottom="1dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="Application"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Beginner"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:paddingHorizontal="4dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Intermediate"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:paddingHorizontal="4dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Advanced"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:paddingHorizontal="4dp"/>
                    </LinearLayout>

                    <!-- MS Word Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="MS Word"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp"/>

                        <RadioButton
                            android:id="@+id/msWordBeginner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>

                        <RadioButton
                            android:id="@+id/msWordIntermediate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>

                        <RadioButton
                            android:id="@+id/msWordAdvanced"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>
                    </LinearLayout>

                    <!-- MS Excel Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="MS Excel"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp"/>

                        <RadioButton
                            android:id="@+id/msExcelBeginner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>

                        <RadioButton
                            android:id="@+id/msExcelIntermediate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>

                        <RadioButton
                            android:id="@+id/msExcelAdvanced"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>
                    </LinearLayout>

                    <!-- MS PowerPoint Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="MS PowerPoint"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp"/>

                        <RadioButton
                            android:id="@+id/msPowerPointBeginner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>

                        <RadioButton
                            android:id="@+id/msPowerPointIntermediate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>

                        <RadioButton
                            android:id="@+id/msPowerPointAdvanced"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>
                    </LinearLayout>

                    <!-- MS Outlook Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="MS Outlook"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp"/>

                        <RadioButton
                            android:id="@+id/msOutlookBeginner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>

                        <RadioButton
                            android:id="@+id/msOutlookIntermediate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>

                        <RadioButton
                            android:id="@+id/msOutlookAdvanced"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:buttonTint="#004B87"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Character References Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Character References"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>

                    <Button
                        android:id="@+id/btnAddReference"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add Reference"
                        android:backgroundTint="#004B87"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="6dp"
                        android:elevation="0dp"/>
                </LinearLayout>

                <!-- Reference Container -->
                <LinearLayout
                    android:id="@+id/referenceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Reference Entry -->
                    <LinearLayout
                        android:id="@+id/referenceEntry1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@drawable/education_entry_background"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reference"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="16dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/referenceNameLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Name"
                            app:hintTextColor="#757575"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            app:placeholderText="Enter full name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/referenceNameInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A1A1A"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:inputType="textCapWords"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/referenceOccupationLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Occupation"
                            app:hintTextColor="#757575"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            app:placeholderText="Enter occupation"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/referenceOccupationInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A1A1A"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:inputType="textCapWords"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/referenceCompanyLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Company"
                            app:hintTextColor="#757575"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            app:placeholderText="Enter company name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/referenceCompanyInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A1A1A"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:inputType="textCapWords"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/referenceContactLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Contact Number"
                            app:hintTextColor="#757575"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/referenceContactInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A1A1A"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:inputType="phone"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnPrevious"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Previous"
                android:backgroundTint="#FFFFFF"
                android:textColor="#004B87"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="12dp"
                android:paddingHorizontal="24dp"
                app:strokeColor="#004B87"
                app:strokeWidth="2dp"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Next Step"
                android:backgroundTint="#004B87"
                android:textColor="#FFFFFF"
