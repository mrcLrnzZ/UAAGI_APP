<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/governmentIdContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Government ID Entry -->
    <LinearLayout
        android:id="@+id/governmentIdEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/education_entry_background"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Government Issued Number"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/idTypeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Type"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#004B87"
            app:boxStrokeWidth="2dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/idTypeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#1A1A1A"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:hint="Select ID Type"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/idNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#004B87"
            app:boxStrokeWidth="2dp"
            app:placeholderText="Enter ID number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#1A1A1A"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>
