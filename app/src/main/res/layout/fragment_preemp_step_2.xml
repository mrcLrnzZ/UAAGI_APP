<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Educational Background  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:id="@+id/educationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Section  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:background="#004B87" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="Educational Background"
                        android:textColor="#1A1A1A"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnAddEducation"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="#004B87"
                        android:elevation="0dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="14dp"
                        android:text="+ "
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        app:cornerRadius="10dp" />

                    <Button
                        android:id="@+id/btnRemoveEducation"
                        android:layout_width="3dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="#FE0000"
                        android:elevation="0dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="14dp"
                        android:text="-"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:visibility="gone"
                        app:cornerRadius="10dp" />

                </LinearLayout>

                <!-- Education Entries Container -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/educationEntriesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/btnPrevious"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="24dp"
                android:text="Previous"
                android:textColor="#004B87"
                app:cornerRadius="8dp"
                app:strokeColor="#004B87"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:backgroundTint="#004B87"
                android:elevation="2dp"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="32dp"
                android:text="Next Step"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>
</LinearLayout>