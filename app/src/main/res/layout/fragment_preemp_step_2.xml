<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Educational Background  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:id="@+id/educationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Section  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:background="#004B87" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="Educational Background"
                        android:textColor="#1A1A1A"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnAddEducation"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:backgroundTint="#004B87"
                        android:elevation="0dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="16dp"
                        android:text="+ Add Education"

                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        app:cornerRadius="6dp" />

                    <Button
                        android:id="@+id/btnRemoveEducation"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:backgroundTint="#004B87"
                        android:elevation="0dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="16dp"
                        android:text="- Remove Education"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:visibility="gone"
                        app:cornerRadius="6dp" />

                </LinearLayout>

                <!-- Education Entries Container -->
                <LinearLayout
                    android:id="@+id/educationEntriesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- First Education Entry -->
                    <LinearLayout
                        android:id="@+id/educationEntry1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/education_entry_background"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Education"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/educationLevel1Layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Education Level *"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            app:hintTextColor="#757575">

                            <AutoCompleteTextView
                                android:id="@+id/educationLevel1Spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/schoolName1Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="2"
                                android:hint="School Name *"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/schoolName1Input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/yearGraduated1Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:hint="Year Graduated *"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575"
                                app:placeholderText="YYYY">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/yearGraduated1Input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/courseAchievements1Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="2"
                                android:hint="Course/Degree &amp; Achievements"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575"
                                app:placeholderText="e.g., Bachelor of Science in Computer Science - Cum Laude">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/courseAchievements1Input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/status1Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:hint="Status"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575">

                                <AutoCompleteTextView
                                    android:id="@+id/status1Spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Second Education Entry -->
                    <LinearLayout
                        android:id="@+id/educationEntry2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/education_entry_background"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Education"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/educationLevel2Layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Education Level *"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            app:hintTextColor="#757575">

                            <AutoCompleteTextView
                                android:id="@+id/educationLevel2Spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/schoolName2Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="2"
                                android:hint="School Name *"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/schoolName2Input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/yearGraduated2Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:hint="Year Graduated *"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575"
                                app:placeholderText="YYYY">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/yearGraduated2Input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/courseAchievements2Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="2"
                                android:hint="Course/Degree &amp; Achievements"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575"
                                app:placeholderText="e.g., Bachelor of Science in Computer Science - Cum Laude">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/courseAchievements2Input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/status2Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:hint="Status"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575">

                                <AutoCompleteTextView
                                    android:id="@+id/status2Spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Third Education Entry -->
                    <LinearLayout
                        android:id="@+id/educationEntry3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/education_entry_background"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Education"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/educationLevel3Layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Education Level *"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            app:hintTextColor="#757575">

                            <AutoCompleteTextView
                                android:id="@+id/educationLevel3Spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/schoolName3Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="2"
                                android:hint="School Name *"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/schoolName3Input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/yearGraduated3Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:hint="Year Graduated *"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575"
                                app:placeholderText="YYYY">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/yearGraduated3Input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/courseAchievements3Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="2"
                                android:hint="Course/Degree &amp; Achievements"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575"
                                app:placeholderText="e.g., Bachelor of Science in Computer Science - Cum Laude">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/courseAchievements3Input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/status3Layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:hint="Status"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#757575">

                                <AutoCompleteTextView
                                    android:id="@+id/status3Spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/btnPrevious"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="24dp"
                android:text="Previous"
                android:textColor="#004B87"
                app:cornerRadius="8dp"
                app:strokeColor="#004B87"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:backgroundTint="#004B87"
                android:elevation="2dp"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="32dp"
                android:text="Next Step"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>
</LinearLayout>