<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Professional Skills  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/White"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:id="@+id/professionalEntryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Professional Skills"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>

                    <Button
                        android:id="@+id/btnAddWorkExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add Skill"
                        android:backgroundTint="#004B87"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="6dp"
                        android:elevation="0dp"/>
                </LinearLayout>

                    <!-- Entry -->
                    <LinearLayout
                        android:id="@+id/workExperienceEntry1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@color/White"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Professional Skills"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:baselineAligned="false">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/companyName1Layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="Category *"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:id="@+id/companyName1Input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:inputType="none"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/levelLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="Level *"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:id="@+id/levelInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:inputType="none"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/jobDescription1Layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Describe your skill in detail"
                            app:hintTextColor="#757575"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            app:placeholderText="Describe your job responsibilities and achievements"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/jobDescription1Input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A1A1A"
                                android:minLines="3"
                                android:gravity="top|start"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Certifications  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Certifications"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>

                    <Button
                        android:id="@+id/btnAddCert"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add Certification"
                        android:backgroundTint="#004B87"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="6dp"
                        android:elevation="0dp"/>
                </LinearLayout>

                <!-- Cert Container -->
                <LinearLayout
                    android:id="@+id/certificationsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Cert Entry -->
                    <LinearLayout
                        android:id="@+id/certificationsEntry1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@color/White"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Certifications"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:baselineAligned="false">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/certificationNameLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="Name"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/certificationNameInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:inputType="textCapWords"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/issuingOrganizationLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Issuing Org"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/issuingOrganizationInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:inputType="textCapWords"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:baselineAligned="false">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/dateObtainedLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="Date Obtained"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/dateObtainedInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:inputType="date"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/expiryDateLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Expiry Date (if applicable)"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/expiryDateInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:inputType="date"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/certificationDescriptionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Description"
                            app:hintTextColor="#757575"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            app:placeholderText="Describe the certification and its relevance"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/certificationDescriptionInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A1A1A"
                                android:minLines="3"
                                android:gravity="top|start"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:inputType="textMultiLine|textCapSentences"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Qualifications  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Qualifications"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>

                    <Button
                        android:id="@+id/btnAddQual"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add Qualification"
                        android:backgroundTint="#004B87"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="6dp"
                        android:elevation="0dp"/>
                </LinearLayout>

                <!-- Qual Container -->
                <LinearLayout
                    android:id="@+id/qualificationContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Qual Entry -->
                    <LinearLayout
                        android:id="@+id/qualificationsEntry1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@color/White"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qualifications"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:baselineAligned="false">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/qualificationTypeLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="Type *"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:id="@+id/qualificationTypeInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:inputType="none"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/qualificationTitleLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Title *"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/qualificationTitleInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:inputType="textCapWords"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:baselineAligned="false">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/issuingAuthorityLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="Issuing Authority/Organization"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/issuingAuthorityInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:inputType="textCapWords"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/dateReceivedLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Date Received"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/dateReceivedInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:inputType="date"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/qualificationDescriptionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Description"
                            app:hintTextColor="#757575"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            app:placeholderText="Describe the qualification and its significance"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/qualificationDescriptionInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A1A1A"
                                android:minLines="3"
                                android:gravity="top|start"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:inputType="textMultiLine|textCapSentences"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Seminars & Trainings  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Seminars &amp; Trainings"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>

                    <Button
                        android:id="@+id/btnAddSeminar"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add Seminar/Training"
                        android:backgroundTint="#004B87"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="6dp"
                        android:elevation="0dp"/>
                </LinearLayout>

                <!-- Seminar Container -->
                <LinearLayout
                    android:id="@+id/seminarContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Seminar Entry -->
                    <LinearLayout
                        android:id="@+id/seminarEntry1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@color/White"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seminar/Training"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:baselineAligned="false">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/seminarTypeLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="Type"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:id="@+id/seminarTypeInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:inputType="none"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/seminarTitleLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Title/Name"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/seminarTitleInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:inputType="textCapWords"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:baselineAligned="false">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/organizerLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="Organizer/Institution"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/organizerInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:inputType="textCapWords"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/dateAttendedLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Date Attended"
                                app:hintTextColor="#757575"
                                app:boxStrokeColor="#004B87"
                                app:boxStrokeWidth="2dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/dateAttendedInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A1A1A"
                                    android:paddingTop="14dp"
                                    android:paddingBottom="14dp"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:inputType="date"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/seminarDescriptionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Description &amp; Learning Outcomes"
                            app:hintTextColor="#757575"
                            app:boxStrokeColor="#004B87"
                            app:boxStrokeWidth="2dp"
                            app:placeholderText="Describe what you learned or achieved from this seminar/training"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/seminarDescriptionInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A1A1A"
                                android:minLines="3"
                                android:gravity="top|start"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:inputType="textMultiLine|textCapSentences"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnPrevious"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Previous"
                android:backgroundTint="#FFFFFF"
                android:textColor="#004B87"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="12dp"
                android:paddingHorizontal="24dp"
                app:strokeColor="#004B87"
                app:strokeWidth="2dp"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Next Step"
                android:backgroundTint="#004B87"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="32dp"
                app:cornerRadius="8dp"
                android:elevation="2dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"/>

    </LinearLayout>
</LinearLayout>