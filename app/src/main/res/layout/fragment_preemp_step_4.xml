<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Professional Skills  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/White"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Professional Skills"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>

                    <Button
                        android:id="@+id/btnAddWorkExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add Skill"
                        android:backgroundTint="#004B87"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="6dp"
                        android:elevation="0dp"/>
                </LinearLayout>

                    <!-- Entry -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ProfessionalSkillEntryContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Certifications  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Certifications"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>

                    <Button
                        android:id="@+id/btnAddCert"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add Certification"
                        android:backgroundTint="#004B87"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="6dp"
                        android:elevation="0dp"/>
                </LinearLayout>

                <!-- Cert Container -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/certificationsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Cert Entry -->


                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Qualifications  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Qualifications"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>

                    <Button
                        android:id="@+id/btnAddQual"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add Qualification"
                        android:backgroundTint="#004B87"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="6dp"
                        android:elevation="0dp"/>
                </LinearLayout>

                <!-- Qual Container -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/qualificationContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Qual Entry -->

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Seminars & Trainings  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#004B87"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Seminars &amp; Trainings"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A1A1A"/>

                    <Button
                        android:id="@+id/btnAddSeminar"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add Seminar/Training"
                        android:backgroundTint="#004B87"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="6dp"
                        android:elevation="0dp"/>
                </LinearLayout>

                <!-- Seminar Container -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/seminarContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Seminar Entry -->

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnPrevious"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Previous"
                android:backgroundTint="#FFFFFF"
                android:textColor="#004B87"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="12dp"
                android:paddingHorizontal="24dp"
                app:strokeColor="#004B87"
                app:strokeWidth="2dp"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Next Step"
                android:backgroundTint="#004B87"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="32dp"
                app:cornerRadius="8dp"
                android:elevation="2dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"/>

    </LinearLayout>
</LinearLayout>