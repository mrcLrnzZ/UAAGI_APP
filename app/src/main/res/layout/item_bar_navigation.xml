<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="12dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_home_24"
                    app:tint="@color/White" />
            </FrameLayout>

            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textColor="#FFFF"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium" />

            <View
                android:id="@+id/indicator_home"
                android:layout_width="32dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/nav_indicator"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_applied"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_applied"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_bookmark_24"
                    app:tint="#99FFFFFF" />
            </FrameLayout>

            <TextView
                android:id="@+id/text_applied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Applied Jobs"
                android:textColor="#99FFFFFF"
                android:textSize="11sp" />

            <View
                android:id="@+id/indicator_applied"
                android:layout_width="32dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/nav_indicator"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_careers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_careers"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search"
                    app:tint="#99FFFFFF" />
            </FrameLayout>

            <TextView
                android:id="@+id/text_careers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Careers"
                android:textColor="#99FFFFFF"
                android:textSize="11sp" />

            <View
                android:id="@+id/indicator_careers"
                android:layout_width="32dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/nav_indicator"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_profile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_account_circle_24"
                    app:tint="#99FFFFFF" />
            </FrameLayout>

            <TextView
                android:id="@+id/text_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Profile"
                android:textColor="#99FFFFFF"
                android:textSize="11sp" />

            <View
                android:id="@+id/indicator_profile"
                android:layout_width="32dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/nav_indicator"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>