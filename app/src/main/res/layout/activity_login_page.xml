<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkBlue">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onehirelogo_darkmode"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.191" />

    <!-- Login Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="1000dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="32dp"
        android:backgroundTint="@color/White"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/emailSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                app:errorEnabled="true"
                app:startIconDrawable="@drawable/baseline_person_24"
                app:startIconContentDescription="Email icon"
                app:hintTextColor="@color/DarkBlue"
                app:boxStrokeColor="@color/emailboxcolor"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/btnemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email Address"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/Black" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnlogin"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:fontFamily="sans-serif-medium"
                android:text="Login"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/DarkBlue"
                app:cornerRadius="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="By proceeding, you hereby acknowledge that you have read, understood, and expressly agree to be legally bound by the Terms and Conditions and Privacy Policy governing the use of this service."
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#C0C0C0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="or Log in with"
                    android:textColor="#888888"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#C0C0C0" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign in with Google"
                android:textColor="#000000"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#DADCE0"
                app:strokeWidth="1dp"
                app:icon="@drawable/google"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@null" />

        </LinearLayout>

        <!-- OTP section hidden initially -->
        <LinearLayout
            android:id="@+id/otpSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToLogin"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/baseline_keyboard_arrow_left_24"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:iconPadding="0dp"
                app:iconSize="32dp"
                app:iconTint="@color/Black"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.IconButton"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify OTP"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/Black"
                />

            <TextView
                android:id="@+id/titemahabamasarap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter OTP sent to @Gmail.com"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/Gray"
                />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/otpInput1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:inputType="number"
                    android:maxLength="1"
                    android:backgroundTint="@color/Black"
                    android:layout_margin="4dp" />

                <EditText
                    android:id="@+id/otpInput2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:backgroundTint="@color/Black"
                    android:inputType="number"
                    android:maxLength="1"
                    android:layout_margin="4dp" />

                <EditText
                    android:id="@+id/otpInput3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/Black"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/Black"
                    android:layout_margin="4dp" />

                <EditText
                    android:id="@+id/otpInput4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/Black"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/Black"
                    android:maxLength="1"
                    android:layout_margin="4dp" />

                <EditText
                    android:id="@+id/otpInput5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/Black"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/Black"
                    android:maxLength="1"
                    android:layout_margin="4dp" />

                <EditText
                    android:id="@+id/otpInput6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/Black"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/Black"
                    android:maxLength="1"
                    android:layout_margin="4dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/otpErrorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="#F44336"
                android:textSize="14sp"
                android:visibility="gone"
                android:text="Invalid OTP. Please try again." />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerifyOTP"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:fontFamily="sans-serif-medium"
                android:text="Login"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/DarkBlue"
                app:cornerRadius="10dp" />


            <TextView
                android:id="@+id/titemahabamasarapREAL"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Didnâ€™t receive OTP? Resend OTP"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/Gray"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
